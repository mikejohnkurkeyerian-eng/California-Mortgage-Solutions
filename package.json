{
  "name": "loan-automation-platform",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "echo \"Run the React Native app instead\"",
    "build": "pnpm -r build",
    "type-check": "pnpm -r type-check",
    "start": "concurrently -n loan,document,workflow,rules -c blue,green,yellow,magenta \"pnpm --filter @loan-platform/loan-service start\" \"pnpm --filter @loan-platform/document-service start\" \"pnpm --filter @loan-platform/workflow-service start\" \"pnpm --filter @loan-platform/rules-service start\"",
    "start:windows": "powershell -ExecutionPolicy Bypass -File ./scripts/start-all.ps1"
  },
  "devDependencies": {
    "@react-native/babel-preset": "^0.73.21",
    "@types/jest": "^29.5.12",
    "@types/nodemailer": "^7.0.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "nodemailer": "^7.0.10"
  }
}
