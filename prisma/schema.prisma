generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User & Auth
model User {
  id               String    @id @default(uuid())
  email            String    @unique
  name             String
  password         String?   // Optional for OAuth users
  role             String    @default("borrower")
  brokerId         String?
  broker           Broker?   @relation(fields: [brokerId], references: [id])
  image            String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  
  // Security Fields
  emailVerified    DateTime?
  twoFactorSecret  String?   // Encrypted TOTP secret
  twoFactorEnabled Boolean   @default(false)
  
  // Relations
  accounts         Account[]
  loans            LoanApplication[]
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Broker {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
}

// Loan Application
model LoanApplication {
  id             String      @id @default(uuid())
  userId         String
  user           User        @relation(fields: [userId], references: [id])
  brokerId       String?
  status         String      @default("Draft")
  stage          String      @default("Application Review")
  data           String      // Storing full 1003 as JSON string (matching loan.ts)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  
  // Relations
  submissions    Submission[]
  // Documents are likely stored inside 'data' JSON or separate? 
  // loan.ts doesn't seem to handle documents relation in create/update.
  // But we have a Document model. Let's keep it but make it optional relation.
  documents      Document[]
}

// ... Borrower, Asset, Liability might not be needed if everything is in 'data' JSON?
// loan.ts puts EVERYTHING in 'data'.
// However, 'Submission' is handled separately in lender.ts.
// Let's keep other models but relate them to LoanApplication just in case.

model Document {
  id             String   @id @default(uuid())
  loanId         String
  loan           LoanApplication @relation(fields: [loanId], references: [id], onDelete: Cascade)
  type           String   
  status         String   
  url            String?  
  analyzedData   Json?    
  createdAt      DateTime @default(now())
}

model Submission {
  id             String   @id @default(uuid())
  loanId         String
  loan           LoanApplication @relation(fields: [loanId], references: [id], onDelete: Cascade)
  lenderId       String
  lenderName     String
  status         String   
  portalUrl      String?
  externalId     String? // externalReferenceId in code
  notes          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  submittedAt    DateTime?
  snapshot       Json?    
  conditions     Json?    
}
